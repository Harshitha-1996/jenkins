boolean test = true
pipeline{
    agent any
    triggers{
        pollSCM('* * * * *')
    }
    stages{
        stage("checkout"){
            steps{
                echo "checkout stage"
            }
        }
        stage("Build"){
            steps{
                script{
                    try{
                        echo "Build stage"
                        exit 1
                    }catch (Exception e){
                        echo " got an exception"
                        echo "$e"
                        test = false

                    }

                }
            }
        }
        stage("test"){
            steps{
                script{
                    if (test){
                        echo "testing"
                    }
                    else{
                        echo "skipping testing"
                    }
                }
              
            }
        }
        stage("notification"){
            steps{
                script{
                    if(!test){
                        echo "there is an error"
                    }
                    else{
                        echo "skipping notification"
                    }
                }
            }
        }
    }
}