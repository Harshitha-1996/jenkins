pipeline{
    agent any
    
    stages{
        stage("checkout"){
            steps{
            
            checkout scmGit(branches: [[name: '*/sub']], extensions: [], 
                userRemoteConfigs: [[credentialsId: 'github',
                 url: 'https://github.com/Harshitha-1996/jenkins.git']])
            }
        }
        stage("build1"){
            when{

                  branch "main"

            }
            steps{
        
                sh "ls -lrt"
            } 
        }
        stage("build2"){
            when{
                branch "sub"
            }
            steps{
                echo"sub branch"
            }
        }
    }
    
    }